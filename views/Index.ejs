<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <title>Employees HomePage</title>
    <style>
        ul{
            display: flex;
        padding: 2rem;
        justify-content: space-between;
        }
        .b {
            padding: 2rem;
        }
   
    </style>

    
</head>
<body>
    <nav>
        <ul>
            <li><a href="/employees">Home Page</a></li>
            <li><a href="/create">Add Staffs</a></li>
        </ul>
    </nav>
    <div class="b">
        <h1>All Employees</h1>

    <% if (employees.length > 0) { %>
        <h1>List of all employee</h1>
        <% employees.forEach((e) => { %>
            <h2> <%= e.name %></h2>
            <h3><%= e.role %></h3>  
            <a href="/employees/<%= e._id %>">Read more</a>
                   
      <% })%>

    <%}else{ %>
        <h1>There is no employee to display</h1>
    <% }%>

    </div>
    
    
</body>
</html>